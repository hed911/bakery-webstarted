%h3 New Cookies for oven '#{@oven.name}'

= form_for [@oven, @cookie] do |f|
  .row
    .small-8.columns
      = f.label :fillings
  .row
    .small-8.columns
      = f.text_field :fillings

  .row
    .small-8.columns
      = f.label :count
  .row
    .small-8.columns
      = number_field_tag :count, 1, min:1, max:99

  .row
    .small-8.columns
      = f.submit 'Mix and bake', class: 'button'



